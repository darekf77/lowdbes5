{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "es2015",
      "es2015.promise",
      "es2015.generator",
      "es2015.collection",
      "es2015.core",
      "es2015.reflect",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}